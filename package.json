{
  "name": "craft-audit",
  "version": "1.0.0",
  "description": "Comprehensive audit tool for Craft CMS projects â€” template analysis, security scanning, HTTP headers, CVE detection, system checks, and visual regression",
  "main": "dist/cli.js",
  "bin": {
    "craft-audit": "./dist/cli.js"
  },
  "files": [
    "dist/",
    "data/",
    "php/analyze-templates.php",
    "craft-audit.config.schema.json"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/cli.ts",
    "start": "node dist/cli.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",

{
  "name": "craft-audit",
  "version": "1.0.0",
  "description": "Comprehensive audit tool for Craft CMS projects - template performance, updates, deprecations, and visual regression",
  "main": "dist/cli.js",
  "bin": {
    "craft-audit": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/cli.ts",
    "start": "node dist/cli.js",
    "lint": "eslint src/**/*.ts",
    "test": "npm run build && node --test tests/*.test.cjs"
  },
  "keywords": [
    "craft-cms",
    "audit",
    "twig",
    "performance",
    "visual-regression",
    "n+1",
    "eager-loading"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "backstopjs": "^6.3.2",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "glob": "^10.3.10",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "minimatch": ">=10.2.1"
  }
}
